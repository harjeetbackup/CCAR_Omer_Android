	    <Button
		    android:id="@+id/comments_add_but"
		    android:layout_width="wrap_content"
		    android:background="@drawable/plus_ic9"
		    android:layout_height="wrap_content"	
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="12dp" 
			android:layout_centerVertical="true"	
		    android:scaleType="fitXY"/>
	
		<Button
		    android:id="@+id/comments_done_but"
		    android:layout_width="wrap_content"
		    android:background="@drawable/done9"
		    android:layout_height="wrap_content"	
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="5dp" 
		    android:visibility="gone"
			android:layout_centerVertical="true"	
		    android:scaleType="fitXY"/> 
	
		<Button
		    android:id="@+id/comments_edit_but"
		    android:layout_width="wrap_content"
		    android:background="@drawable/edit9"
		    android:layout_height="wrap_content"	
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="5dp" 
		    android:visibility="gone"
			android:layout_centerVertical="true"	
		    android:scaleType="fitXY"/> 
  
  
	</RelativeLayout>
       
    <LinearLayout 
        android:focusable="true"
		android:id="@+id/comments_edit_lin"
        android:focusableInTouchMode="true" 
        android:layout_width="fill_parent"
   		android:layout_below="@+id/comments_frontrelandroidtop" 
		android:layout_marginLeft="20dp"
		android:layout_marginTop="7dp"
		android:layout_centerHorizontal="true"
        android:layout_height="fill_parent" >
    
		<EditText 
			android:hint="Enter text here" 
			android:id="@+id/comments_edit_name"
			android:layout_width="fill_parent"		
			android:layout_height="fill_parent"
			android:background="#0fff"
			android:textColor="#000000" 
			android:textSize="25px"
			android:gravity="top"
			android:singleLine="true"
			/>
		    
    </LinearLayout>
			
